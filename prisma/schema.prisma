datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Repository {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  chatId    BigInt   // ✅ используем BigInt, как и в коде
  createdAt DateTime @default(now())
}

